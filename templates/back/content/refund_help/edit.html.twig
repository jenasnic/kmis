{% extends 'layout/_back.html.twig' %}

{% block body %}

    <nav class="level">
        <div class="level-left">
            <h1 class="title">{{ 'back.refundHelp.title'|trans }}</h1>
        </div>
    </nav>

    {{ form_start(form) }}

    <div class="columns">
        <div class="column">
            <div class="fieldset">
                <label>{{ 'back.refundHelp.passCitizen.label'|trans }}</label>
                <div class="columns">
                    <div class="column">{{ form_row(form.passCitizenEnable) }}</div>
                </div>
                <div class="columns">
                    <div class="column is-one-fifth">{{ form_row(form.passCitizenAmount) }}</div>
                    <div class="column">{{ form_row(form.passCitizenLabel) }}</div>
                    <div class="column">{{ form_row(form.passCitizenFileLabel) }}</div>
                </div>
                <div class="columns">
                    <div class="column">{{ form_row(form.passCitizenHelpText) }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="columns">
        <div class="column">
            <div class="fieldset">
                <label>{{ 'back.refundHelp.passSport.label'|trans }}</label>
                <div class="columns">
                    <div class="column">{{ form_row(form.passSportEnable) }}</div>
                </div>
                <div class="columns">
                    <div class="column is-one-fifth">{{ form_row(form.passSportAmount) }}</div>
                    <div class="column">{{ form_row(form.passSportLabel) }}</div>
                    <div class="column">{{ form_row(form.passSportFileLabel) }}</div>
                </div>
                <div class="columns">
                    <div class="column">{{ form_row(form.passSportHelpText) }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="columns">
        <div class="column">
            <div class="fieldset">
                <label>{{ 'back.refundHelp.ccas.label'|trans }}</label>
                <div class="columns">
                    <div class="column">{{ form_row(form.ccasEnable) }}</div>
                </div>
                <div class="columns">
                    <div class="column is-one-fifth">{{ form_row(form.ccasAmount) }}</div>
                    <div class="column">{{ form_row(form.ccasLabel) }}</div>
                </div>
                <div class="columns">
                    <div class="column">{{ form_row(form.ccasHelpText) }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="is-flex is-flex-direction-row is-justify-content-flex-end is-align-content-center">
        <div class="block">
            <button type="submit" class="button is-success">{{ 'global.save'|trans }}</button>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}
