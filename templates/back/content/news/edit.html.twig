{% extends 'layout/_back.html.twig' %}

{% block body %}

    {% embed 'back/components/_form_header.html.twig' with {
        'title': (news.id is null) ? ('back.news.edit.new'|trans) : ('back.news.edit.title'|trans),
        'backLink': path('bo_news_list'),
        'deleteAction': (news.id is not null) ? path('bo_news_delete', {'news': news.id}) : null,
        'deleteToken': (news.id is not null) ? csrf_token('delete-'~news.id) : null
    } %}
    {% endembed %}

    {{ form_start(form) }}
    <div class="columns">
        <div class="column">{{ form_row(form.active) }}</div>
    </div>
    <div class="columns">
        <div class="column">{{ form_row(form.title) }}</div>
    </div>
    <div class="columns">
        <div class="column">{{ form_row(form.content) }}</div>
    </div>
    <div class="columns">
        <div class="column">{{ form_row(form.details) }}</div>
    </div>
    <div class="columns">
        <div class="column">{{ form_row(form.pictureFile) }}</div>
    </div>
    <div class="is-flex is-flex-direction-row is-justify-content-flex-end is-align-content-center">
        <div class="block">
            <button type="submit" class="button is-success">{{ 'global.save'|trans }}</button>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
