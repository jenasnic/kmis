{% block schedule_row %}
  <div class="columns">
    <div class="column">{{ form_row(form.start) }}</div>
    <div class="column">{{ form_row(form.end) }}</div>
  </div>
  <div class="schedule-help">{{ 'back.calendar.form.schedule.help'|trans }}</div>
  <div class="columns">
    <div class="column">{{ form_row(form.sporting) }}</div>
    <div class="column">{{ form_row(form.detail) }}</div>
  </div>

{% endblock %}

{% block calendar_schedule_list_widget %}
  {% if errors|length > 0 %}
    {{- form_errors(form) -}}
  {% endif %}
  <ul
    id="{{ form.vars.id }}_form"
    class="collection-type schedule-list"
    data-collection-type="li"
    {% if (allow_add) %}
      data-prototype="{{ form_row(form.vars.prototype)|e('html_attr') }}"
      data-prototype-name="{{ prototype.vars['name']|default('__name__') }}"
      data-trigger-add="{{ 'global.add'|trans }}"
    {% endif %}
    {% if (allow_delete) %}
      data-trigger-remove="{{ 'global.delete'|trans }}"
      data-trigger-remove-confirm="{{ 'global.confirmDelete'|trans }}"
    {% endif %}
  >
    {% if (allow_add) %}
      <button class="button is-success add-item">
        <span class="icon is-small">
          <i class="icon-more"></i>
        </span>
        <span>{{ 'back.calendar.form.addSchedule'|trans }}</span>
      </button>
    {% endif %}
    {% for child in form %}
      <li class="collection-type-item">
        {{ form_row(child) }}
      </li>
    {% endfor %}
  </ul>
{% endblock %}
