{% extends 'layout/_back.html.twig' %}

{% block body %}

    {% embed 'back/components/_list_header.html.twig' with {
        'title': ('back.sporting.list.title'|trans),
        'subTitle': (sportingCount~' '~('back.sporting.list.count'|trans)),
        'addLink': path('bo_sporting_new'),
        'addLabel': 'back.sporting.list.action.add'|trans
    } %}
    {% endembed %}

    <div data-grid="data-grid">

        {{ form_start(form) }}

        {% embed 'back/components/_table.html.twig' with {'isDraggable': true} %}

        {% block thead %}
            <th class="full">{{ 'back.sporting.list.header.title'|trans }}</th>
            <th class="has-text-centered">{{ 'back.sporting.list.header.active'|trans }}</th>
            <th></th>
        {% endblock %}

        {% block tbody %}
            {% if sportingCount > 0 %}
                {% for i in 0..(sportingCount-1) %}
                    <tr>
                        <td class="draggable">
                            {{ form.children[i].vars.data.name }}
                            {{ form_row(form.children[i].rank, {'attr': {'data-rank': ''}}) }}
                        </td>
                        <td class="has-text-centered">
                            {{ form_row(form.children[i].active) }}
                        </td>
                        <td class="action">
                            <div class="action-wrapper">
                                <a href="{{ path('bo_sporting_edit', {'sporting': form.children[i].vars.data.id}) }}" class="button is-primary">
                                    <span class="icon"><i class="icon-pencil"></i></span>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
        {% endblock %}

    {% endembed %}

    <div class="is-flex is-flex-direction-row is-justify-content-flex-end is-align-content-center">
        <div class="block">
            <button type="submit" class="button is-success">{{ 'global.save'|trans }}</button>
        </div>
    </div>

    {{ form_end(form) }}

    </div>

{% endblock %}
