{% extends 'layout/_back.html.twig' %}

{% block body %}

    {% form_theme form 'back/payment/_form.html.twig' %}

    {% embed 'back/components/_form_header.html.twig' with {
        'title': 'back.payment.edit.title'|trans,
        'subTitle': payment.paymentType|trans,
        'backLink': backLink
    } %}
    {% endembed %}

    <div class="form-wrapper">
        {{ form_start(form) }}
        {{ form_row(form) }}
        <div class="is-flex is-flex-direction-row is-justify-content-flex-end is-align-content-center">
            <div class="block">
                <button type="submit" class="button is-success">{{ 'global.save'|trans }}</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
